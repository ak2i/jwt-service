{
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read src/main.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --watch src/main.ts",
    "test": "deno test --allow-net --allow-env --allow-run --no-lock --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.ns", "dom", "dom.iterable", "dom.asynciterable"]
  }
}
